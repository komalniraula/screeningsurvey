      "title": "Colon Cancer (General Population)",
      "criteria": {
        "minAge": 45,
        "maxAge": 75
      },
      "recommendation": [
        "Colonoscopy every 10 years OR",
        "Flexible sigmoidoscopy every 5 years OR",
        "Flexible sigmoidoscopy every 10 years with FIT annually OR",
        "Fecal occult blood test/FIT every year OR",
        "CT colonography every 5 years.",
        "If any test is positive, do colonoscopy with biopsy."
      ]
    },
    {
      "id": "breast_cancer",
      "title": "Breast Cancer",
      "criteria": {
        "gender": "Female",
        "minAge": 50,
        "maxAge": 75
      },
      "recommendation": [
        "Screen with mammogram every 2 years."
      ]
    },
    {
      "id": "cervical_cancer",
